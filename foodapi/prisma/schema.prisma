generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLE {
  ADMIN
  USER
}

model User {
  id             String      @id @default(uuid())
  name           String
  email          String      @unique
  hashedPassword String
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  role           ROLE        @default(USER)
  cartItems      CartItems[]
  orders         Order[]

  @@map("users")
}

model Products {
  id            String      @id @default(uuid())
  name          String
  price         Float
  imageUrl      String
  description   String
  numberInStock Int         @default(30)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  cartItems     CartItems[]

  @@map("products")
}

model CartItems {
  id        String   @id @default(uuid())
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  product   Products @relation(fields: [productId], references: [id])
  productId String

  @@map("cartItems")
}

model Order {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  totalAmount Float
  address     String
  status      String   @default("PENDING")
  items       Json[]

  @@map("orders")
}

model Feedback {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("feedbacks")
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}
